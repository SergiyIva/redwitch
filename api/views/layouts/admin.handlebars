<!doctype html>
<html lang="ru">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="/style/bootstrap.css"/>
    <link rel="stylesheet" href="/style/style.css"/>

    <title>ДашМонтаж | Admin</title>
</head>

<body>
<header class="navbar navbar-dark main-header sticky-top bg-dark">
    <button class="navbar-toggler d-md-none mx-3 collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#sidebarMenu" aria-controls="sidebarMenu" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <a class="navbar-brand col-md-3 col-lg-2 me-0 px-3" href="/admin">Администрирование</a>

<!--    <input class="form-control form-control-dark w-100" type="text" placeholder="Search" aria-label="Search">-->
    <div class="navbar-nav">
        <div class="nav-item text-nowrap">
            <a class="nav-link px-3" href="/">Выйти</a>
        </div>
    </div>
</header>
    {{#if flash}}
        <div id="flash" class="alert alert-dismissible alert-{{flash.type}}">
            <button id="closeButton" type="button" class="btn-close shadow-none" data-dismiss="alert"
                    aria-hidden="true"></button>
            <strong>{{flash.intro}}</strong> {{{flash.message}}}
        </div>
    {{/if}}
<div class="container-fluid">

    <div class="row">
        <nav id="sidebarMenu" class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse" style="">
            <div class="position-sticky pt-3">
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link main-link" aria-current="page" id="/admin" href="/admin">
                            Панель управления
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link main-link" id="/admin/orders" href="/admin/orders">
                            Заказы
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link main-link" id="/admin/products" href="/admin/products">
                            Витрина
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link main-link" id="/admin/send-mail" href="/admin/send-mail">
                            Рассылка
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link main-link" href="#">
                            Промокоды
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link main-link" href="#">
                            Integrations
                        </a>
                    </li>
                </ul>

                <h6 class="sidebar-heading d-flex justify-content-between align-items-center px-3 mt-4 mb-1 text-muted">
                    <span>Статистика</span>
                    <a class="link-secondary" href="#" aria-label="Add a new report">
                        <span data-feather="plus-circle">+</span>
                    </a>
                </h6>
                <ul class="nav flex-column mb-2">
                    <li class="nav-item">
                        <a class="nav-link main-link" href="#">
                            Текущий месяц
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link main-link" href="#">
                            Последние 3 месяца
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link main-link" href="#">
                            За год
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link main-link" href="#">
                            За все время
                        </a>
                    </li>
                </ul>
            </div>
        </nav>
        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 pb-3">
        {{{body}}}
        </main>
    </div>
</div>

<script src="/style/bootstrap.js"></script>
<script>
    const btn = document.getElementById("closeButton")
    const flash = document.getElementById("flash")
    if (btn)
    btn.addEventListener("click", ()=>{
        flash.style.display = "none"
    })
    const path = document.location.pathname
    const link = document.getElementById(path)
    if(link)
    link.classList.add("active")
</script>
</body>
</html>